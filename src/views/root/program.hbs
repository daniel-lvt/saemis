<div class="card">
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Programa Academico
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <form action="/root/program/add" method="POST">
                        <div class="row">

                            <div class="col form-group">

                                <select class="custom-select mr-sm-2" name="option_tipo">
                                    {{#each jornada}}
                                    <option id="{{idJornada}}">{{idJornada}}-{{tipo_jornada}}</option>
                                    {{/each}}

                                </select>
                            </div>

                            <div class="col form-group">
                                <select class="custom-select mr-sm-2" name="option_carrera">
                                    {{#each ciudad}}
                                    <option id="{{idCiudad}}">{{idCiudad}}-{{nombre_Ciudad}}</option>
                                    {{/each}}
                                </select>
                            </div>


                            <div class="col-md-4 form-group">
                                <input type="text" class="form-control" placeholder="nombre corto" name="corto">
                            </div>
                            <div class="col-md-4 form-group">
                                <input type="text" class="form-control" placeholder="nombre completo" name="descripcion">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-success btn-block">Add Program</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    {{!-- contenido de la tabla de usuarios a listar --}}

    <div class="p-4">
        <h2>Programas Academicos</h2>
        <table class="table table-striped" id="id_user_root">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"></th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Jornada</th>
                    <th scope="col">Ciudad</th>

                </tr>
            </thead>
            <tbody>
                {{#each carrera}}
                <tr>
                    <th scope="row">{{@key}}</th>
                    <td>
                        <div class="row">
                            <div class="input.group-text pr-2">
                                <a href="/root/program/delete/{{idCarrera}}"><img src="/img/icons/delete.png"></a>
                            </div>
                            <div class="input.group-text">
                                <a href="/root/program/edit/{{idCarrera}}"><img src="/img/icons/edit.png"></a>
                            </div>
                        </div>

                    </td>
                    <td>{{Nombre_carrera}}</td>
                    <td>{{Descripcion_carrera}}</td>
                    <td>{{tipo_jornada}}</td>
                    <td>{{nombre_Ciudad}}</td>
                </tr>

                {{/each}}


            </tbody>
        </table>
    </div>

</div>

{{> footer}}