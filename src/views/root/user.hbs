<div class="card">
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse"
                        data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Add User_Admin
                    </button>
                </h2>
            </div>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                    <form action="/root/user/add" method="POST">
                        <div class="row">

                            <div class="col form-group">
                                <select class="custom-select mr-sm-2" name="option_carrera">
                                    {{#each programas}}
                                    <option id="{{idCarrera}}">
                                        {{idCarrera}}-{{Nombre_carrera}}-{{nombre_Ciudad}}-{{tipo_jornada}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="col-md-4 form-group">
                                <input type="email" class="form-control" placeholder="uptc mail" name="mail">
                            </div>
                            <div class="col form-group">
                                <input type="number" value='0' class="form-control" placeholder="code" name="code">
                            </div>
                            <div class="col form-group">
                                <button class="btn btn-success btn-block">Add User</button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

    {{!-- contenido de la tabla de usuarios a listar --}}

    <div class="p-4">
        <h2>Usuarios</h2>
        <table class="table table-striped " id="id_user_root">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col"></th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Correo</th>
                    <th scope="col">T.Usuario</th>
                    <th scope="col">Programa</th>
                    <th class="col-6">Ciudad</th>
                    <th class="col">Jornada</th>
                </tr>
            </thead>
            <tbody>
                {{#each user_table}}

                <tr>
                    <th scope="row">{{idUsuario_admin}}</th>
                    <td>
                        <div class="row">
                            <div class="input.group-text pr-2">
                                <a href="/root/user/delete/{{idUsuario_admin}}"><img src="/img/icons/delete.png"></a>
                            </div>
                            {{!-- <div class="input.group-text">
                                <a href="/root/user/edit/{{idUsuario_admin}}"><img src="/img/icons/edit.png"></a>
                            </div> --}}
                        </div>

                    </td>
                    <td>{{Nombre_Usuario_admin}}</td>
                    <td>{{correo}}</td>
                    <td>{{tipo_usuario_admin}}</td>
                    <td>{{Nombre_carrera}}</td>
                    <td>{{nombre_Ciudad}}</td>
                    <td>{{tipo_jornada}}</td>
                </tr>

                {{/each}}
            </tbody>
        </table>
    </div>

</div>

{{> footer}}