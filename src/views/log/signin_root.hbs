<div class="container p-4">
    <div class="row">
        <a href="/"><img src="/img/icons/home.svg" alt=""></a>
        <a href="/signin"><img src="/img/icons/chevron-left.svg" alt=""></a>
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignIn Root</h3>
                </div>
                <div class="card-body">
                    <img src="/img/icons/user.svg" alt="logo" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/root/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="from-group">
                            <button class="btn btn-success btn-block">
                                SignIn
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>SignUp Root</h3>
                </div>
                <div class="card-body">
                    <form action="/root/signup" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="from-group">
                            <button class="btn btn-success btn-block">
                                SignUp
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer}}