<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    {{#each course}}
                    <h3>Crear Tema <h3 class="text-uppercase">{{Nombre_materia}}</h3>
                    </h3>
                    {{/each}}
                </div>
                <div class="card-body">
                    <form action="/user/course/add-forum/{{id}}" method="POST" enctype="application/x-www-form-urlencoded">
                        <div class="form-group">
                            <input type="text" name="titulo" placeholder="Titulo" class="form-control" required>
                            <p class="text-left small">Ingresa un titulo que sea llamativo sobre el tema a tratar</p>
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" class="form-control" placeholder="Descripcion" rows="4"
                                required></textarea>
                            <p class="text-left small">Ingresa una descripcion sobre el problema a tratar</p>
                        </div>
                        <hr>
                        <div class="form-group">
                            <input type="file" name="archivo" id="archivo" class="form-control">
                            <p class="text-letf small">Puede agregar una imagen para ayudar a entender el problema, no es ogligatorio</p>
                        </div>
                        <div class="from-group">
                            <button class="btn btn-success btn-block">
                                Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{{> footer}}